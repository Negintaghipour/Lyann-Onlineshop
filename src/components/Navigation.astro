}
.main-nav .nav-left ul li{
   padding-left: 20px;
    
}
.main-nav .nav-left ul li a{
    font: size 1.3rem;
    color: rgb(119, 107, 107);
    
}
.main-nav .nav-left ul li a:hover{
    border-bottom: 2px solid black;
