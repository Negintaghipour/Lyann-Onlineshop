  .features-section {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .box-icon {
    display: flex;
    justify-content: space-around;
    width: 100%;
    max-width: 800px;
  }

  .change,
  .check {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 20px;
  }

  .change i,
  .check i {
    font-size: 40px;
    margin-bottom: 10px;
  }

  aside {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    background-color: #f4f4f9;
  }

  .aside-1 {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 1200px;

    padding: 20px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .warum,
  .alltag {
    text-align: center;
    margin-bottom: 20px;
  }

  .warum h1,
  .alltag h1 {
    font-size: 2rem;
    color: #333;
    margin-bottom: 10px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .warum p,
  .alltag p {
    font-size: 1rem;
    color: #666;
    line-height: 1.6;
    margin-bottom: 10px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
  }

  .alltag img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .vision-container {
    padding: 20px;
    text-align: center;
    background-color: rgb(241, 240, 240);
  }

  .vision h1 {
    font-size: 1.6rem;
    margin-bottom: 10px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .vision p {
    font-size: 1rem;
    margin-bottom: 20px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .vision-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #007bff;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    margin-bottom: 20px;
  }

  .vision-button:hover {
    background-color: #0056b3;
  }

  .vision-produkt {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
  }

  .vision-produkt img {
    width: 100%;
    max-width: 200px;
    height: 200px;
    border-radius: 10px;
    object-fit: cover;
  }
  .vision-produkt img:hover {
    transform: scale(1.3);
    transition: all 1s ease-in-out;
  }
  .banner-section {
    max-width: 100%;
    height: 400px;
    position: relative;
  }
  .banner {
    position: relative;
    width: 100%;
    height: 500px;
  }

  .banner h1 {
    position: absolute;
    max-width: 70%;
    top: 100px;
    left: 50px;
    color: white;
    font-size: 1.4rem;
    font-weight: 800;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }
  .banner p {
    position: absolute;
    top: 200px;
    left: 40px;
    max-width: 80%;
    color: white;
    text-align: center;
    font-size: 1rem;
    font-weight: 600;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }
  .banner img {
    width: 100%;
    height: 400px;
    object-fit: cover;
  }

  .chat-button {
    position: fixed;
    bottom: 20px;
    right: 10px;
    background-color: var(--primary-color);
    color: white;
    padding: 10px;
    border-radius: 50px;
    z-index: 10;
    font-size: 16px;
    font-weight: bold;
  }

  .chat-button:hover {
    background-color: var(--dark-color);
  }

  @media (min-width: 768px) {
    aside-1 {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
    }
  }
  .vision-produkt {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 20px;
  }

