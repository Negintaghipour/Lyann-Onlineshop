<style>

.offer-card{
  display: grid;
  grid-template-columns: 600px 700px;
  background-color: #fff;
  margin-bottom: 60px;
  border-radius: 10px;
  box-shadow: 0 0 4px #fff;
  margin-top: 200px;
  

}
.offer-card .card-left{
  text-align: center;

}
.offer-card .card-left .card-title{
font-size: 1.3rem;
font-weight: bold;
background-color: brown;
color: #fff;
padding: 10px 20px;
display: inline-block;
border-radius: 0 0 30px 30px;

}
.offer-card .card-left img{
 width: 600px;
 height: 600px;
 margin-right: 30px;
 border-radius: 30px;
 object-fit: cover;
}
.offer-card .card-left .counter-down{
  font-size: 1.5rem;
  padding-top: 30px;
  font-weight: bold;
  
}
.offer-card .card-left .card-time{
  font-size: 1.1rem;
  font-weight: bold;
  padding: 10px 0 30px 0;
  display: inline-block;
  color: deepskyblue;

}
.offer-card .card-right{
border-left: 1px solid #8c8a8a;
padding: 30px;
}
.offer-card .card-right h2{
  color: #575757;
  padding: 30px 0;
  font-size: 1.7rem;
}
.offer-card .card-right ul{
  border-top: 1px solid #8c8a8a;
  padding-top: 20px;
  font-size: 1.2rem;
  font-weight: bold;
  list-style-type: circle;
  margin-left: 20px;
 
}
.offer-card .card-right ul li{
  padding-top: 10px;
  color: #8c8a8a;
}
.offer-card .card-right p{
  padding: 20px 0;
  font-size: 1rem;
  font-weight: bold;
}
.offer-card .card-right .card-price{
  display: grid;
  grid-template-columns: repeat(2,1fr);
  grid-template-rows: repeat(2,1fr);
  padding-top: 20px;

}
.offer-card .card-right .card-price .main-price{
order: -1;
font-weight: bold;
font-size: 1.2rem;
padding-bottom: 20px;
color:forestgreen;
text-decoration-line: line-through;
}
.offer-card .card-right .card-price .offer-price{
order: 1;
font-weight: bold;
font-size: 1.2rem;
padding-bottom: 20px;
color: brown;
}
.offer-card .card-right .card-price a{
order: 0;
font-weight: bold;
font-size: 1.2rem;
padding-bottom: 20px;
color: deepskyblue;
} 
